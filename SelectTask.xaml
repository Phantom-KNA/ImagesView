<Window x:Class="ImagesView.SelectTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImagesView"
        mc:Ignorable="d"
        Title="SelectTask" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Background="Black">

        <GroupBox Margin="60" Header="Task" BorderThickness="0.1" Foreground="White">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Button Content="1 Task" Click="Button_Click" Height="50" Width="100" Margin="0,10,0,0"/>
                <Button Content="2-3 Task" Click="Button_Click_2" Height="50" Width="100" Margin="0,10,0,0"/>
            </StackPanel>
        </GroupBox>
        


    </Grid>
</Window>
